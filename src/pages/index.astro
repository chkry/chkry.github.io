---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class:list={["pt-8 pb-6", "border-b border-border"]}>
      <div class="flex flex-col sm:flex-row sm:items-center sm:gap-6">
        <img 
          src="/assets/ProfilePhoto.jpg" 
          alt="Chakradhar Reddy" 
          class="w-24 h-24 rounded-full object-cover mb-4 sm:mb-0 shadow-md"
        />
        <div>
          <h1 class="my-2 inline-block text-3xl font-bold font-heading sm:my-4 sm:text-4xl">
            Hi, I'm Chakradhar Reddy
          </h1>
          <a
            target="_blank"
            href="/rss.xml"
            class="inline-block ml-2"
            aria-label="rss feed"
            title="RSS Feed"
          >
            <IconRss
              width={18}
              height={18}
              class="scale-110 stroke-accent stroke-3 rtl:-rotate-90"
            />
            <span class="sr-only">RSS Feed</span>
          </a>
        </div>
      </div>

      <p class="mt-4 text-lg">
        Engineering at <a href="https://www.grab.com/sg/" target="_blank" class="font-semibold underline decoration-dashed underline-offset-4 hover:text-accent">GRAB</a> · Building with <span class="font-semibold">React, Go</span> & <span class="font-semibold">Claude Code</span> · AI Evangelist
      </p>
      <p class="mt-3 opacity-90">
        I craft scalable web applications and explore the intersection of AI and product development. Here, I share insights on engineering, curated tech reads, and lessons from building products at scale.
      </p>
      <p class="mt-3">
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/about"
        >
          More about me →
        </LinkButton>
      </p>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex max-sm:flex-col sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold font-heading tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold font-heading tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
